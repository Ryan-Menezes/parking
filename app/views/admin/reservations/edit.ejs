<div class="pd-20 card-box mb-30">
    <h1 class="text-blue h4">Nova Reserva</h1>
    <form action="/admin/reservas/<%= reservation.plate %>/editar/salvar" method="POST">
        <div class="form-group">
            <label>Placa: </label>
            <input type="text" name="plate" class="form-control" placeholder="Placa" maxlength="10" value="<%= reservation.plate %>">
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label>Marca: </label>
                <input type="text" name="brand" class="form-control" placeholder="Marca" value="<%= reservation.brand %>">
            </div>
            <div class="form-group col-md-6">
                <label>Modelo: </label>
                <input type="text" name="model" class="form-control" placeholder="Modelo" value="<%= reservation.model %>">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label>CPF: </label>
                <input type="text" name="cpf" class="form-control" placeholder="CPF" maxlength="11" value="<%= reservation.cpf %>">
            </div>
            <div class="form-group col-md-6">
                <label>Nome: </label>
                <input type="text" name="name" class="form-control" placeholder="Nome" value="<%= reservation.name %>">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label>Telefone/Celular: </label>
                <input type="text" name="phone" class="form-control" placeholder="Telefone" maxlength="11" value="<%= reservation.phone %>">
            </div>
            <div class="form-group col-md-6">
                <label>E-Mail: </label>
                <input type="email" name="email" class="form-control" placeholder="E-Mail" value="<%= reservation.email %>">
            </div>
        </div>

        <button type="submit" class="btn btn-danger p-3">Salvar <i class="fa fa-save"></i></button>
    </form>
</div>