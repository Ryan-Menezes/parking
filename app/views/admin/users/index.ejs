<div class="card-box mb-30">
    <div class="pd-20">
        <a href="/admin/usuarios/novo" class="btn btn-danger float-right">Novo Usuário <i class="fa fa-plus-circle"></i></a>
        <h1 class="text-blue h4">Usuários</h1>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Id</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>E-Mail</th>
                    <th>Criado em</th>
                    <th>Atualizado em</th>
                    <th class="datatable-nosort">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% for(const user of users){ %>
                <tr>
                    <td class="table-plus"><%= user.id %></td>
                    <td><%= user.first_name %> <%= user.last_name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td><%= user.created_at.toLocaleString('pt-BR') %></td>
                    <td><%= user.created_at.toLocaleString('pt-BR') %></td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="/admin/usuarios/<%= user.id %>/editar"><i class="dw dw-edit2"></i> Editar</a>
                                <a class="dropdown-item" href="/admin/usuarios/<%= user.id %>/deletar"><i class="dw dw-delete-3"></i> Deletar</a>
                            </div>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>